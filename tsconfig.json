{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist"
	},
	"include": ["src"],
	"exclude": ["src/**/*.test.ts"]
}
