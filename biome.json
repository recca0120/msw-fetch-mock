{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"includes": ["**", "!**/node_modules", "!**/dist", "!**/coverage", "!**/pnpm-lock.yaml"],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all",
			"bracketSpacing": true,
			"arrowParentheses": "always"
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "tab",
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUnusedFunctionParameters": "warn",
				"noUndeclaredDependencies": "error"
			},
			"style": {
				"useImportType": {
					"level": "error",
					"options": { "style": "inlineType" }
				},
				"noNonNullAssertion": "warn",
				"useConst": "error",
				"noUselessElse": "error",
				"noInferrableTypes": "error",
				"noParameterAssign": "error",
				"useDefaultParameterLast": "error"
			},
			"suspicious": {
				"noVar": "error",
				"noDoubleEquals": "error",
				"noConsole": "warn"
			},
			"performance": {
				"noAccumulatingSpread": "warn"
			},
			"nursery": {
				"noImportCycles": "error"
			}
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "e2e/**/*.test.*"],
			"linter": {
				"rules": {
					"suspicious": { "noConsole": "off" },
					"correctness": { "noUnusedFunctionParameters": "off" },
					"style": { "noNonNullAssertion": "off" }
				}
			}
		},
		{
			"includes": ["src/fetch-mock.ts", "src/native-adapter.ts"],
			"linter": {
				"rules": {
					"suspicious": { "noConsole": "off" }
				}
			}
		},
		{
			"includes": ["*.config.ts", "*.config.js", "*.config.mjs"],
			"linter": {
				"rules": {
					"suspicious": { "noConsole": "off" }
				}
			}
		}
	]
}
